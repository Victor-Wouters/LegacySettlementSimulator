import pm4py
import pandas as pd
import numpy as np

# Load event log
eventlog=pd.read_csv("eventlogtest.csv", sep=";")
eventlog['case_id'] = eventlog['TID'].astype(str)
eventlog['Starttime'] = pd.to_datetime(eventlog['Starttime'], format='%Y-%m-%d %H:%M:%S')
eventlog['Endtime'] = pd.to_datetime(eventlog['Endtime'], format='%Y-%m-%d %H:%M:%S')
eventlog['Activity'] = eventlog['Activity'].astype(str)
eventlog = eventlog.drop(columns=['TID'])
event_log = pm4py.format_dataframe(eventlog, case_id='case_id',activity_key='Activity', timestamp_key='Starttime')


# Discover traces in the event log
def log_statistics(eventlog):
    variants = pm4py.get_variants(eventlog)
    start=pm4py.get_start_activities(event_log)
    end=pm4py.get_end_activities(event_log)
    max_length = max(len(key) for key in variants.keys())
    min_length=min(len(key) for key in variants.keys())
    print(f"number of variants:{len(variants)}, the start activities are: {start}, the end activities are: {end},max number of events per trace: {max_length}")

log_statistics(eventlog=event_log)